<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ECF4D6"
    tools:context=".Views.Fragments.AccountFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:fontFamily="@font/montserrat"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:text="@string/account_details"
            android:textColor="@color/blue"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logOut"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/logout" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="500dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/accont_shape"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/hospital_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="@string/jnm_hospital"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="23sp"
                    android:textColor="#ECF4D6"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/editDetails"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/hospitalId"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center|left"
                android:paddingStart="10dp"
                android:text="XXXXXX"
                android:textColor="@color/blue"
                android:fontFamily="@font/montserrat"
                android:textSize="20sp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="@string/SignUpemail"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
                <TextView
                    android:id="@+id/accountEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/joydeepp2001_gmail_com"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:text="Phone"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
                <TextView
                    android:id="@+id/accountPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/_918918094014"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Account\nCreated On"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
                <TextView
                    android:id="@+id/accountCreation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/_04_12_2019"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/total_no_nof_patients"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
                <TextView
                    android:id="@+id/accountpatients"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="12"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="@string/total_pdf_ngenerated"
                    android:gravity="center|left"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/montserrat_light"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
                <TextView
                    android:id="@+id/accountPDF"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/_14"
                    android:layout_weight="2"
                    android:gravity="center|end"
                    android:textSize="15sp"
                    android:textColor="#ECF4D6"
                    />
            </LinearLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>